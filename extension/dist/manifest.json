{
  "manifest_version": 3,
  "name": "YT Outline & Snap",
  "version": "1.0.1",
  "description": "YouTube動画の要約生成とスナップショット取得を行うオーバーレイ拡張",
  "default_locale": "en",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["contentScript.js"],
    "css": ["style.css"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_title": "YT O&S"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["*://*.youtube.com/*"]
  }]
}
